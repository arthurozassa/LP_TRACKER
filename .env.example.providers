# Web3 Provider Configuration
# Copy this to .env and fill in your API keys

# Ethereum Mainnet RPC Endpoints
INFURA_MAINNET_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
ALCHEMY_MAINNET_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY
QUICKNODE_MAINNET_URL=https://YOUR_ENDPOINT.quiknode.pro/YOUR_API_KEY/

# Ethereum Testnet RPC Endpoints
INFURA_SEPOLIA_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
ALCHEMY_SEPOLIA_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Layer 2 Ethereum RPC Endpoints
INFURA_ARBITRUM_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_PROJECT_ID
ALCHEMY_ARBITRUM_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY
INFURA_POLYGON_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID
ALCHEMY_POLYGON_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
INFURA_BASE_URL=https://base-mainnet.infura.io/v3/YOUR_PROJECT_ID
ALCHEMY_BASE_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Solana RPC Endpoints
HELIUS_MAINNET_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
HELIUS_DEVNET_URL=https://devnet.helius-rpc.com/?api-key=YOUR_API_KEY
QUICKNODE_SOLANA_URL=https://YOUR_ENDPOINT.solana-mainnet.quiknode.pro/YOUR_API_KEY/
ALCHEMY_SOLANA_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# WebSocket endpoints for real-time data (optional)
HELIUS_MAINNET_WS=wss://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
HELIUS_DEVNET_WS=wss://devnet.helius-rpc.com/?api-key=YOUR_API_KEY
QUICKNODE_SOLANA_WS=wss://YOUR_ENDPOINT.solana-mainnet.quiknode.pro/YOUR_API_KEY/

# Provider Configuration (optional overrides)
# ETH_RATE_LIMIT_PER_SECOND=10
# SOL_RATE_LIMIT_PER_SECOND=20
# PROVIDER_TIMEOUT_MS=30000
# HEALTH_CHECK_INTERVAL_MS=60000