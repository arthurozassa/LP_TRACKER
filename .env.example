# LP Tracker Environment Variables
# Copy this file to .env.local and fill in your values

# Application Mode
# Set to 'demo' for demo mode, 'production' for live data
NODE_ENV=development
NEXT_PUBLIC_APP_MODE=demo

# Database Configuration (Production)
DATABASE_URL=postgresql://user:password@localhost:5432/lp_tracker
DATABASE_SSL=true

# Redis Configuration (Production Caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Ethereum RPC Endpoints
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_RPC_BACKUP_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
ETHEREUM_WEBSOCKET_URL=wss://mainnet.infura.io/ws/v3/YOUR_INFURA_KEY

# Arbitrum RPC Endpoints
ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_INFURA_KEY
ARBITRUM_RPC_BACKUP_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Polygon RPC Endpoints
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_BACKUP_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Base RPC Endpoints
BASE_RPC_URL=https://mainnet.base.org
BASE_RPC_BACKUP_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Solana RPC Endpoints
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_RPC_BACKUP_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
SOLANA_WEBSOCKET_URL=wss://api.mainnet-beta.solana.com

# API Keys
INFURA_API_KEY=your_infura_api_key_here
ALCHEMY_API_KEY=your_alchemy_api_key_here
QUICKNODE_API_KEY=your_quicknode_api_key_here

# DEX/Protocol API Keys
UNISWAP_SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/uniswap/uniswap-v3
SUSHISWAP_SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/sushiswap/exchange
CURVE_API_URL=https://api.curve.fi
BALANCER_SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/balancer-labs/balancer-v2

# Solana DEX APIs
RAYDIUM_API_URL=https://api.raydium.io
ORCA_API_URL=https://api.orca.so
METEORA_API_URL=https://api.meteora.ag
JUPITER_API_URL=https://quote-api.jup.ag

# Price Data APIs
COINGECKO_API_KEY=your_coingecko_api_key
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
DEFI_LLAMA_API_URL=https://api.llama.fi

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_BURST_CAPACITY=10

# Caching Configuration
CACHE_DEFAULT_TTL=300
CACHE_POSITION_DATA_TTL=60
CACHE_PRICE_DATA_TTL=30
CACHE_PROTOCOL_DATA_TTL=600

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
POSTHOG_API_KEY=your_posthog_api_key
MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags
ENABLE_REAL_TIME_UPDATES=false
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_YIELD_OPTIMIZATION=false
ENABLE_SMART_ALERTS=false
ENABLE_PORTFOLIO_TRACKING=false

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Third-party Integrations
WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id
WEB3_MODAL_PROJECT_ID=your_web3_modal_project_id

# Email Configuration (for alerts/notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_URL=https://your-domain.com/api/webhooks

# Development & Testing
ENABLE_DEBUG_LOGGING=true
LOG_LEVEL=info
TEST_WALLET_ETHEREUM=0x742d35Cc6634C0532925a3b8D0C6A02E02b365f2
TEST_WALLET_SOLANA=DYw8jCTfwHNRJhhmFcbXvVDTqWMEVFBX6ZKUmG5CNSKK
MOCK_DATA_ENABLED=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30000
BATCH_SIZE=100
MAX_POSITIONS_PER_SCAN=1000

# UI Configuration
NEXT_PUBLIC_THEME=dark
NEXT_PUBLIC_SHOW_BETA_FEATURES=false
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_CHART_REFRESH_INTERVAL=30000